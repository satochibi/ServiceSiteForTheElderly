    <script>
        const orderButton = document.getElementById("order-button");
        orderButton.addEventListener('click', (e) => {
            e.preventDefault();
            const answer = confirm('この商品を取り寄せますか?');
            if (answer) {
                location.href = "./order-complete.html";
            }
        });


        const buttonElements = document.getElementsByClassName("cart-button");
        Array.prototype.forEach.call(buttonElements, (anElement) => {
            anElement.addEventListener('click', (e) => {
                e.preventDefault();
                location.href = "./shopping-cart.html";
            });
        });
    </script>

